// A lot of this stuff is temporary for now.
// Content containers are meant to behave much differently than the mastodon default UI
// For now linking default kik colors to replace the base UI colors and formulas

html {scrollbar-color: lighten($kik-background-container, 4%) $kik-background-container;}
::-webkit-scrollbar {
	width: 12px;
	height: 12px;
}
::-webkit-scrollbar-thumb {
	border: none;
	background: rgba($kik-placeholder-accent, .5);
	@at-root body.theme-kiksocial-light#{&} {background: rgba($kik-background-container-light, .3);}
}
::-webkit-scrollbar-thumb:hover {
	background: rgba($kik-placeholder-accent, .75);
	@at-root body.theme-kiksocial-light#{&} {background: rgba($kik-background-container-light, .4);}
}
::-webkit-scrollbar-thumb:active {
	background: $kik-placeholder-accent;
	@at-root body.theme-kiksocial-light#{&} {background: rgba($kik-background-container-light, .5);}
}
::-webkit-scrollbar-track {
	border: none;
	background: rgba($kik-background-container, .5);
	@at-root body.theme-kiksocial-light#{&} {background: rgba($kik-background-base, .3);}
}
::-webkit-scrollbar-track:hover {
	background: rgba($kik-background-container, .75);
	@at-root body.theme-kiksocial-light#{&} {background: rgba($kik-background-base, .4);}
}
::-webkit-scrollbar-track:active {
	background: $kik-background-container;
	@at-root body.theme-kiksocial-light#{&} {background: rgba($kik-background-base, .5);}
}
::-webkit-scrollbar-corner {background: transparent;}